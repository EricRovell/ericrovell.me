		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"lib": [ "ESNext" ],
		"moduleResolution": "bundler"
	},
	"include": [
		"src/components/**/*.svelte",
