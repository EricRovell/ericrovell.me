{
	"name": "ericrovell.me",
	"version": "0.6.0",
	"description": "Personal blog about programming and photography",
	"scripts": {
		"lint": "eslint src/**/*.{ts,js,svelte}",
		"stylelint": "npx stylelint src/**/*.css",
		"typecheck": "tsc --noEmit true",
		"dev": "vite dev",
		"dev:expose": "vite dev --host --port 5555",
		"build": "vite build",
		"preview": "vite preview",
		"img:prepare": "node src/scripts/images-prepare.js",
		"img:process": "node src/scripts/images-process.js",
		"test": "vitest run"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ericrovell/ericrovell.me.git"
	},
	"keywords": [
		"blog",
		"programming",
		"math",
		"photography"
	],
	"author": "Eric Rovell",
	"types": "index.d.ts",
	"homepage": "https://github.com/ericrovell/ericrovell.me#readme",
	"directories": {
		"test": "tests"
	},
	"engines": {
		"node": ">=16.0"
	},
	"devDependencies": {
		"@rollup/plugin-replace": "^4.0.0",
		"@sveltejs/adapter-static": "1.0.0-next.43",
		"@sveltejs/kit": "1.0.0-next.483",
		"@typescript-eslint/eslint-plugin": "^5.37.0",
		"@typescript-eslint/parser": "^5.37.0",
		"eslint": "^8.23.1",
		"eslint-plugin-svelte3": "^4.0.0",
		"exifreader": "^4.5.1",
		"happy-dom": "^7.5.6",
		"katex": "^0.16.2",
		"lint-staged": "^13.0.3",
		"mdast-util-to-string": "^3.1.0",
		"mdsvex": "^0.10.6",
		"rehype-katex": "5",
		"rehype-slug": "^5.0.1",
		"remark-math": "2",
		"sharp": "^0.31.0",
		"simple-git-hooks": "^2.8.0",
		"stylelint": "^14.12.1",
		"stylelint-config-standard": "^28.0.0",
		"svelte": "^3.50.1",
		"svelte-media-observer": "^1.0.2",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.0",
		"typescript": "^4.8.3",
		"typescript-plugin-css-modules": "^3.4.0",
		"unist-util-visit": "^4.1.0",
		"vite": "^3.1.1",
		"vitest": "^0.24.1"
	},
	"type": "module",
	"lint-staged": {
		"*.{ts,js,svelte}": "eslint"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged",
		"pre-push": "npm run lint && npm run stylelint"
	},
	"dependencies": {
		"@ericrovell/radix": "^1.0.3",
		"svelte-intl-precompile": "^0.12.0"
	}
}
